<div class="container-fluid container-fluid-custom pb-5 mb-5">

  <div class="row mb-4">
    <div class="col">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h5">View Note</h1>
        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">
          Delete
        </button>
      </div>
    </div>
  </div>

  <form action="/dashboard/item/<%= noteID %>?_method=PUT" method="POST">
    <div class="form-group mb-3">
      <input type="text" class="form-control fw-bold border-0 fs-6" id="title" name="title" value="<%= note.title %>" placeholder="Title">
    </div>

    <div class="form-group mb-3">
      <textarea class="form-control fs-6" id="body" name="body" placeholder="Take a note..." rows="8"><%= note.body %></textarea>
    </div>

    <div class="form-group text-end">
      <button type="submit" class="btn btn-primary btn-sm">Update</button>
    </div>
  </form>

</div>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Note</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will delete your note <b class="fw-bold"><%= note.title %></b><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
        <form action="/dashboard/item-delete/<%= noteID %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger btn-sm">Delete Note</button>
        </form>
      </div>
    </div>
  </div>
</div>
